---
interface Props {
  title?: string;
  subtitle?: string;
}

const { title = 'Blog', subtitle } = Astro.props as Props;
---

<section class="w-full py-4">
  <div class="mx-auto max-w-5xl px-3">
    <div class="flex flex-col md:flex-row items-start md:items-center justify-between gap-4">
      <h1 class="text-4xl md:text-6xl font-extrabold tracking-tight text-foreground">
        <span class="bg-gradient-to-r from-[var(--accent)] to-[var(--accent-dark)] bg-clip-text text-transparent">{title}</span>
      </h1>
      {subtitle && (
        <div class="flex flex-col items-start md:items-end gap-3 md:text-right">
          <p class="text-base md:text-lg text-[color:var(--color-text-secondary)]">{subtitle}</p>
          <a href="/submit-story" class="inline-flex items-center justify-center gap-2 px-6 py-2.5 bg-transparent border-2 border-[color:var(--accent)] text-[color:var(--accent)] rounded-md hover:bg-[color:var(--accent)] transition-all text-sm font-semibold" onmouseover="this.style.color='white'" onmouseout="this.style.color='var(--accent)'">
            Submit Your Story
          </a>
        </div>
      )}
    </div>
  </div>
  </section>



---
const today = new Date();
import Button from "../ui/button/Button.astro";
import { FOOTER_TEXT } from "../../consts";
---

<footer id="contact" class="py-12 px-4 text-center">
  <h2 class="text-2xl md:text-3xl font-semibold text-neutral-800 dark:text-neutral-100">Join the Tradition</h2>
  
  <div class="mt-6 flex flex-col md:flex-row justify-center items-center gap-4">
    <Button href="/contact" variant="secondary" size="md">
      Become an Associate
    </Button>
    <Button href="/submit-story" variant="secondary" size="md">
      Submit Your Story
    </Button>
  </div>
  
  <!-- Footer Bottom -->
  <div class="mt-12 pt-8 border-t border-neutral-200 dark:border-neutral-700">
    <p class="text-sm text-neutral-600 dark:text-neutral-400">
      {FOOTER_TEXT}
    </p>
  </div>
</footer>
